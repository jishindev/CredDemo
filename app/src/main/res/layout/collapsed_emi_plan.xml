<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    tools:ignore="HardcodedText"
    android:alpha="0.8"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tvEMILabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"
        android:gravity="start"
        app:layout_constraintEnd_toStartOf="@id/tvDurationLabel"
        android:text="EMI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEMI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:text="â‚¹4,247 / mo"
        app:layout_constraintEnd_toStartOf="@id/tvDuration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEMILabel" />


    <TextView
        android:id="@+id/tvDurationLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="duration"
        app:layout_constraintStart_toEndOf="@id/tvEMILabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:text="12 months"
        app:layout_constraintStart_toEndOf="@id/tvEMI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDurationLabel" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvDuration"
        app:layout_constraintTop_toTopOf="@id/tvDurationLabel" />

</androidx.constraintlayout.widget.ConstraintLayout><!--
</com.google.android.material.card.MaterialCardView>-->